{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": false,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
